<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/task_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9:00"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/task_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:text="04 April"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/task_weekday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/task_category"
                android:layout_width="@string/image_icon_width"
                android:layout_height="@string/image_icon_height"
                android:layout_weight="3"
                android:padding="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_car" />

            <ImageView
                android:id="@+id/task_onoff"
                android:layout_width="@string/image_icon_width"
                android:layout_height="@string/image_icon_height"
                android:layout_weight="3"
                android:padding="5dp"
                android:src="@drawable/ic_lightson" />

            <ImageView
                android:id="@+id/task_inout"
                android:layout_width="@string/image_icon_width"
                android:layout_height="@string/image_icon_height"
                android:layout_weight="3"
                android:padding="5dp"
                android:src="@drawable/ic_notin" />

            <ImageView
                android:id="@+id/task_pooling"
                android:layout_width="@string/image_icon_width"
                android:layout_height="@string/image_icon_height"
                android:layout_weight="3"
                android:padding="5dp"
                android:src="@drawable/ic_pooling" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/task_location_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_weight="3"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/task_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="Macqurie Shopping Center, 2000"
                android:textSize="16dp" />
        </LinearLayout>
        >

    </LinearLayout>

</LinearLayout>